    screen -dmS stream4 sh -c 'omxplayer --win "'$tlh' '$clv' '$clh' '$brv'" '$cam3' --live; exec bash'
    screen -dmS stream5 sh -c 'omxplayer --win "'$clh' '$clv' '$brh' '$brv'" '$cam4' --live; exec bash'
